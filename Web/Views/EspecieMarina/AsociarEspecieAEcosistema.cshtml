@{
    ViewData["Title"] = "AsociarEspecieAEcosistema";
}

@if (!String.IsNullOrEmpty(ViewBag.Mensaje))
{
    <div class="alert alert-danger">
        @ViewBag.Mensaje
    </div>
}

<h1>Asociar una especie a un ecocistema</h1>

<h4>EspecieMarina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AsociarEspecieAEcosistema">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">

                <label>Seleccione un Ecosistema Marino </label> <br />
                <select id="EcosistemaSeleccionado" name="EcosistemaSeleccionado">
                    @foreach (var option in ViewBag.EcosistemasMarinos)
                    {
                        <option value="@option.Id">@option.Nombre</option>
                    }
                </select>

            </div>


            <div class="form-group">
                <label>Seleccione una Especie Marina </label> <br />
                <select id="EspecieSeleccionada" name="EspecieSeleccionada">
                    @foreach (var option in ViewBag.EspeciesMarinas)
                    {
                        <option value="@option.Id">@option.NombreVulgar</option>
                    }
                </select>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
