@model EcosistemasMarinos.Entidades.Usuario

@{
    ViewData["Title"] = "Create";
}


@if (!String.IsNullOrEmpty(ViewBag.Mensaje))
{
    <div class="alert alert-danger">
        @ViewBag.Mensaje
    </div>
}
else
{
    <div class="alert alert-info">
        <p>La contraseña debe cumplir con los siguientes requisitos:</p>
        <p>-Largo minimo de 8 caracteres</p>
        <p>
            -Al menos:
            Una mayuscula, una minuscula, un digito, y un caracter de los siguientes:
            punto, coma, numeral, punto y coma, dos puntos, exclamacion de cierre
        </p>
    </div>
}

<h1>Crear Usuario</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia" class="control-label"></label>
                <input asp-for="Contrasenia" class="form-control" type="password" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label for="Administrador">
                    <input type="checkbox" id="Administrador" name="Administrador" value="Administrador">
                    Administrador
                </label><br>

   
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
